<?xml version="1.0" encoding="utf-8"?>
<!--
    TextToImageFragment Layout
    Main screen for image generation with ComfyUI
    Features:
    - Square image preview area
    - Prompt input field
    - Generate button
    - Modal bottom sheet for configuration
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextToImageFragment">

    <!-- Main content area -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top App Bar (Material 3 small) -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorSurface"
            app:title="@string/text_to_image_title"
            app:navigationIcon="@drawable/arrow_back_24px"
            app:menu="@menu/top_app_bar_menu" />

        <!-- Content area with flexible image sizing -->
        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

        <!-- Section 1: Image Preview -->
        <!-- Image preview with flexible height -->
        <LinearLayout
            android:id="@+id/imagePreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="150dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Card for image preview with shadow -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <!-- ImageView for displaying generated images -->
                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/placeholder_image_description" />

                <!-- Placeholder icon (shown initially) -->
                <ImageView
                    android:id="@+id/placeholderIcon"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_placeholder"
                    android:contentDescription="@string/placeholder_image_description" />

                <!-- Progress overlay (shown during generation) -->
                <FrameLayout
                    android:id="@+id/progressOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <!-- Progress indicator container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <!-- Progress bar -->
                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_bar_square"
                            android:minHeight="8dp"
                            android:maxHeight="8dp" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Instruction text below image -->
            <TextView
                android:id="@+id/imageInstructionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/tap_image_hint"
                android:textSize="12sp"
                android:visibility="visible"
                android:alpha="0.7" />

        </LinearLayout>

        <!-- Section 2: Prompt Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/promptInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_hint"
            android:layout_marginBottom="16dp"
            app:endIconMode="clear_text"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/promptInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_prompt"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="2"
                android:gravity="top"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Section 3: Action Buttons -->
        <!-- Generate button and Settings button in a row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Generate button (takes most of the space) - Filled style -->
            <Button
                android:id="@+id/generateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/button_generate"
                android:textSize="18sp"
                android:paddingVertical="16dp"
                style="@style/Widget.Material3.Button" />

            <!-- Settings button (gear icon) - Circular tonal button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/settingsButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:contentDescription="@string/settings_button_description"
                app:icon="@drawable/manufacturing_24px"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:cornerRadius="28dp"
                style="@style/Widget.Material3.Button.TonalButton" />

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
