<?xml version="1.0" encoding="utf-8"?>
<!--
    Bottom Sheet Configuration Panel (Modal)
    Contains all configuration options for image generation:
    - Workflow selection
    - Checkpoint selection
    - Width, Height, Steps parameters
-->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_panel_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Segmented Button for Checkpoint/UNET -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/configModeToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <Button
            android:id="@+id/checkpointModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/checkpoint_mode"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/unetModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/unet_mode"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Checkpoint Configuration Content -->
    <LinearLayout
        android:id="@+id/checkpointContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Workflow Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/workflowInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/workflow_label"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/workflowDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Checkpoint Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/checkpointInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/checkpoint_label"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/checkpointDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Image Generation Parameters -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Parameters"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Width and Height in a row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <!-- Width -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/widthInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="@string/width_label"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/widthInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_width"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Height -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/heightInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="@string/height_label"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/heightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_height"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Steps -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/stepsInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/steps_label"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/stepsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_steps"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- UNET Configuration Content -->
    <LinearLayout
        android:id="@+id/unetContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

    <!-- Workflow Selection (UNET only) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/unetWorkflowInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/workflow_label"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/unetWorkflowDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- UNET Model Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/unetInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UNET"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/unetDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- VAE Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/vaeInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="VAE"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/vaeDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- CLIP Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/clipInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CLIP"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/clipDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Image Generation Parameters -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Parameters"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Width and Height in a row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <!-- Width -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unetWidthInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:hint="@string/width_label"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unetWidthInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_width"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Height -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unetHeightInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:hint="@string/height_label"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unetHeightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_height"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- Steps -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/unetStepsInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/steps_label"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/unetStepsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_steps"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
