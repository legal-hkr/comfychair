<?xml version="1.0" encoding="utf-8"?>
<!--
    Mask Editor Dialog Layout
    Fullscreen dialog for painting the inpainting mask
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/maskEditorToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:title="@string/mask_editor_title"
        app:navigationIcon="@drawable/close_24px"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge">

        <!-- Done button in toolbar -->
        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:text="@string/done"
            style="@style/Widget.Material3.Button.TextButton" />

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Canvas area for mask painting -->
    <FrameLayout
        android:id="@+id/canvasContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/black">

        <!-- Source image (background) -->
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="@string/placeholder_image_description" />

        <!-- Mask paint view (overlays the image) -->
        <sh.hnet.comfychair.MaskPaintView
            android:id="@+id/maskPaintView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Bottom toolbar with brush controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="48dp"
        android:background="?attr/colorSurface"
        android:elevation="8dp">

        <!-- Brush size slider -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brush_size"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/brushSizeSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="10"
            android:valueTo="200"
            android:value="50"
            app:labelBehavior="gone" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Clear mask button -->
            <Button
                android:id="@+id/clearMaskButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/clear_mask"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Invert mask button -->
            <Button
                android:id="@+id/invertMaskButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/invert"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
