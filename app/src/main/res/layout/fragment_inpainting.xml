<?xml version="1.0" encoding="utf-8"?>
<!--
    InpaintingFragment Layout
    Inpainting screen for ComfyUI with source/preview tabs
    Features:
    - Segmented button to switch between source image and preview
    - Source image canvas with mask overlay
    - Preview canvas for generated images
    - Prompt input field
    - Generate button and Settings button
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InpaintingFragment">

    <!-- Main content area -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top App Bar (Material 3 small) -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorSurface"
            app:title="@string/inpainting_title"
            app:navigationIcon="@drawable/arrow_back_24px"
            app:menu="@menu/top_app_bar_menu" />

        <!-- Content area with flexible image sizing -->
        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

            <!-- Section 1: Image Preview with Tab Switching -->
            <LinearLayout
                android:id="@+id/imagePreviewContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="150dp"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Card for image preview with shadow -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/imageCard"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <!-- FrameLayout to stack source/preview views -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Source Image Container (shows source image + mask) -->
                        <FrameLayout
                            android:id="@+id/sourceImageContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible">

                            <!-- Source image (bottom layer) -->
                            <ImageView
                                android:id="@+id/sourceImageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/placeholder_image_description" />

                            <!-- Mask overlay (top layer, semi-transparent) -->
                            <ImageView
                                android:id="@+id/maskOverlayView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/edit_mask" />

                            <!-- Placeholder icon (shown when no source image) -->
                            <ImageView
                                android:id="@+id/sourcePlaceholderIcon"
                                android:layout_width="240dp"
                                android:layout_height="240dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_placeholder"
                                android:contentDescription="@string/no_source_image" />

                        </FrameLayout>

                        <!-- Preview Container (shows generated image) -->
                        <FrameLayout
                            android:id="@+id/previewContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <!-- Preview image -->
                            <ImageView
                                android:id="@+id/previewImageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/placeholder_image_description" />

                            <!-- Preview placeholder icon -->
                            <ImageView
                                android:id="@+id/previewPlaceholderIcon"
                                android:layout_width="240dp"
                                android:layout_height="240dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_placeholder"
                                android:contentDescription="@string/placeholder_image_description" />

                            <!-- Progress overlay (shown during generation) -->
                            <FrameLayout
                                android:id="@+id/progressOverlay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone">

                                <!-- Progress indicator container -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:orientation="vertical">

                                    <!-- Progress bar -->
                                    <ProgressBar
                                        android:id="@+id/progressBar"
                                        style="@android:style/Widget.ProgressBar.Horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="8dp"
                                        android:max="100"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/progress_bar_square"
                                        android:minHeight="8dp"
                                        android:maxHeight="8dp" />

                                </LinearLayout>

                            </FrameLayout>

                        </FrameLayout>

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Instruction text below image -->
                <TextView
                    android:id="@+id/imageInstructionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="@string/long_press_hint"
                    android:textSize="12sp"
                    android:alpha="0.7" />

            </LinearLayout>

            <!-- Section 2: Tab Toggle (Source Image / Preview) -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/viewModeToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <Button
                    android:id="@+id/sourceImageButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/source_image_tab"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <Button
                    android:id="@+id/previewButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/preview_tab"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Section 3: Prompt Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/promptInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_hint"
                android:layout_marginBottom="16dp"
                app:endIconMode="clear_text"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/promptInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textCapSentences"
                    android:minLines="2"
                    android:gravity="top"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Section 4: Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Generate button (takes most of the space) -->
                <Button
                    android:id="@+id/generateButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/button_generate"
                    android:textSize="18sp"
                    android:paddingVertical="16dp"
                    style="@style/Widget.Material3.Button" />

                <!-- Settings button (gear icon) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settingsButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:contentDescription="@string/settings_button_description"
                    app:icon="@drawable/manufacturing_24px"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="24dp"
                    app:cornerRadius="28dp"
                    style="@style/Widget.Material3.Button.TonalButton" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
