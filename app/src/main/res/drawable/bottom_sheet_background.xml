<?xml version="1.0" encoding="utf-8"?>
<!--
    Bottom Sheet Background
    Rounded corners at the top for a modern appearance
    Uses theme color to support light/dark mode
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Theme-aware background color (adapts to light/dark mode) -->
    <!-- Note: This will be overridden in code to use proper theme color -->
    <solid android:color="@android:color/background_light" />

    <!-- Rounded corners only at the top -->
    <corners
        android:topLeftRadius="24dp"
        android:topRightRadius="24dp" />

</shape>
